<!DOCTYPE html>
<html lang="<%- page.language %>">
<head>

    <% include includes/head.ejs %>

</head>
<body>
<div id="wrapper">
    <div class="content-wrapper">
        <div class="content">

            <div id="movie">

                <div class="row">

                    <% if (typeof page.adv === 'object' && page.adv.top) { %>
                    <div style="text-align: center; margin: 10px auto">
                        <%- page.adv.top %>
                    </div>
                    <% } %>

                    <div class="col-md-9">

                        <h1><%= movie.title %> (<%- movie.year_url %>) трейлер</h1>

                        <h4 class="alternative_title"><%- movie.title_en %></h4>

                        <div class="data clearfix">
                            <div class="poster-data">
                                <div class="poster">
                                    <img src="<%- movie.poster %>" alt="<%= movie.title %>" class="img-responsive">
                                    <span class="label label-danger"><% if (movie.season && movie.episode) { %><%- movie.season %> сезон <%- movie.episode %> серия<% } else { %><%- movie.year %><% } %></span>
                                </div>

                                <% if (movie.vote) { %>
                                <div class="rating-block">
                                    <% for (var i = 0; i < parseInt(movie.rating)/20; i++) { %>
                                    <div class="rating-symbol" style="display: inline-block; position: relative;"><span class="glyphicon glyphicon-star rating-star"></span></div>
                                    <% } %>
                                    <div class="rating-votes">Оценка: <%- movie.rating/20 %>/5 <br>(<%- movie.vote %> голосов)</div>
                                    <div class="rating-success"><span class="rating-text">Ваша оценка: 0</span> <span class="glyphicon glyphicon-remove remove-rating"></span></div>
                                </div>
                                <% } %>
                            </div>

                            <ul class="list-unstyled details">
                                <% if (movie.year_url) { %><li><b>Год выпуска:</b> <%- movie.year_url %></li><% } %>
                                <% if (movie.genres_url) { %><li><b>Жанр:</b> <%- movie.genres_url %></li><% } %>
                                <% if (movie.countries_url) { %><li><b>Страна:</b> <%- movie.countries_url %></li><% } %>
                                <% if (movie.directors_url) { %><li><b>Режиссер:</b> <%- movie.directors_url %></li><% } %>
                                <% if (movie.actors_url) { %><li><b>Актеры:</b> <%- movie.actors_url %></li><% } %>
                                <% if (movie.quality) { %><li><b>Качество:</b> <%- movie.quality %></li><% } %>
                                <% if (movie.translate) { %><li><b>Звук:</b> <%- movie.translate %></li><% } %>
                                <% if (movie.kp_vote) { %><li><b>Рейтинг КиноПоиск:</b> <%- movie.kp_rating/10 %> (<%- movie.kp_vote %>)</li><% } %>
                                <% if (movie.imdb_vote) { %><li><b>Рейтинг IMDb:</b> <%- movie.imdb_rating/10 %> (<%- movie.imdb_vote %>)</li><% } %>
                            </ul>

                            <div class="body"><p><%- page.seo %></p></div>

                        </div>

                        <div class="episodesListBlock" style="display: none; margin: 10px auto;">
                            <h3 class="h3"><%= movie.title %> новые серии</h3>
                            <div id="episodesList" data-id="<%- movie.kp_id %>"></div>
                        </div>

                        <% if (movie.pictures.length) { %>
                        <div class="screens" id="lightgallery">
                            <% movie.pictures.forEach(function (picture) { %>
                            <% var ahref = page.urls.movies.picture
                                    ? movie.url + '/' + page.urls.movies.picture
                                    : picture.picture_big %>
                            <a href="<%- ahref %>">
                                <img src="<%- picture.picture_min %>" alt="<%= movie.title %> (<%- movie.year %>)" title="<%= movie.title %> (<%- movie.year %>)">
                            </a>
                            <% }); %>
                        </div>
                        <% if (!page.urls.movies.picture) { %>
                        <link href="/themes/default/public/desktop/css/lightgallery.min.css" rel="stylesheet">
                        <script src="/themes/default/public/desktop/js/lightgallery.min.js"></script>
                        <script>lightGallery(document.getElementById('lightgallery'));</script>
                        <% } %>
                        <% } %>

                        <ul class="nav nav-tabs">
                            <li>
                                <a href="<%- movie.url %>">Описание</a>
                            </li>
                            <% if (page.urls.movies.online) { %>
                            <li>
                                <a href="<%- movie.url %>/<%- page.urls.movies.online %>">Онлайн</a>
                            </li>
                            <% } %>
                            <% if (page.urls.movies.download) { %>
                            <li>
                                <a href="<%- movie.url %>/<%- page.urls.movies.download %>">Скачать</a>
                            </li>
                            <% } %>
                            <% if (page.urls.movies.trailer) { %>
                            <li>
                                <a href="javascript:void(0)" class="current">Трейлер</a>
                            </li>
                            <% } %>
                        </ul>

                        <div class="tab-content" style="width:100%;height:370px">
                            <%- page.player %>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="pull-left">
                                    <a class="btn-own btn-fb" href="javascript:void(0);" title="Поделиться ссылкой на Фейсбуке" target="_blank"><span class="icon-facebook"></span></a>
                                    <a class="btn-own btn-vk" href="javascript:void(0);" title="Поделиться ссылкой во Вконтакте" target="_blank"><span class="icon-vkontakte"></span></a>
                                    <a class="btn-own btn-tw" href="javascript:void(0);" title="Поделиться ссылкой в Твиттере" target="_blank"><span class="icon-twitter"></span></a>
                                    <a class="btn-own btn-ok" href="javascript:void(0);" title="Поделиться ссылкой в Одноклассниках" target="_blank"><span class="icon-odnoklassniki"></span></a>
                                </div>
                            </div>
                        </div>

                        <% if (typeof contents === 'object' && contents.length) { %>
                        <div style="clear: both"></div>
                        <% contents.forEach(function (content) { %>
                        <div style="float: left; width: 50%;">
                            <div style="margin: 0; padding: 10px 0">
                                <a href="<%- content.url %>" class="cinemapress-news" style="background-image:url(<%- content.image %>);">
                                    <div class="cinemapress-news-title">
                                        <%= content.title %>
                                    </div>
                                </a>
                            </div>
                        </div>
                        <% }); %>
                        <div style="clear: both"></div>
                        <% } %>

                        <div id="comments">
                            <% if (page.comments) { %>
                            <%- page.comments %>
                            <% } %>
                        </div>

                        <% if (typeof movies === 'object') {
                                for (var type in movies) {
                        if (movies.hasOwnProperty(type) && movies[type].length) {
                        movies[type].forEach(function (category) { %>

                        <h2 class="h3"><%- category.name %></h2>

                        <div class="row items">

                            <% if (category.movies.length) {
                            category.movies.forEach(function (movie) { %>

                            <div class="col-xs-3 item">
                                <a href="<%- movie.url %>">
                                    <img src="<%- movie.poster %>" class="img-responsive" style="width: 100%; height: 250px" alt="<%= movie.title %>" title="<%= movie.title %>">
                                </a>

                                <div class="info">
                                    <div class="title">
                                        <a href="<%- movie.url %>" class="link" title="<%= movie.title %>"><%= movie.title %></a>
                                    </div>
                                    <div class="desc"><% if (movie.genres) { %><%- movie.genres %><% } %></div>
                                </div>
                            </div>

                            <% }); } %>

                        </div>

                        <% }); } } } %>

                    </div>
                    <div class="col-md-3">

                        <% include includes/right.ejs %>

                    </div>
                </div>

            </div>

            <% include includes/footer.ejs %>

        </div>
    </div>

    <% include includes/left.ejs %>
</div>
</body>
</html>